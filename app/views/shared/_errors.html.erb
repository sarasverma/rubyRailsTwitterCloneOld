<% if flash[:notice] %>
    <div class="alert alert-success">
        <%= flash[:notice] %>
    </div>        
<% end %>
  

<% if flash[:alert] %>
    <div class="alert alert-warning">
        <%= flash[:alert] %>
     </div>   
<% end %>

<% if flash[:error] %>
    <div class="alert alert-danger">
        <%= flash[:error] %>
    </div>
<% end %>

